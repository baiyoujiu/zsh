@CHARSET "UTF-8";
/*  
* @description:开关按钮
* @author: 
* @update:
*/

/*开关*/
.ico_btn{ background:url(../../img/ico_btn.png) no-repeat;}
.OC_box{ width:128px;height:22px; margin:auto;}
.OC_box span{ width:40px; float:left; height:22px; line-height:22px; text-align:center;}
.OC_box_bar{ float:left; width:48px; height:22px; position:relative; overflow:hidden;cursor:pointer;}
.OC_box_bar h1{ width:48px; height:22px; position:absolute; left:0px; top:0px; background-position:0px 2px; z-index:99;}
.OC_box_bar h3{ width:48px; height:22px; position:absolute; left:0px; top:0px; background-position:-6px -20px; z-index:98; }
.OC_box_bar h2{ width:22px; height:22px; position:absolute; left:0px; top:0px;  background-position:0px -42px; z-index:100; cursor:pointer;}

/* 新版开关 2016-06-23 */
.m-onoff-new{display:inline-block;width:60px;height:24px;text-align:center;line-height:24px;}
.m-onoff-new .ico_btn{background:url(../../img/icon_btn_new.png) no-repeat;}
.m-onoff-new span{display:none;width:40px; float:left; height:24px; line-height:24px; text-align:center;}
.m-onoff-new .OC_box_bar{float:none;display:inline-block; width:53px; height:24px; position:relative;  overflow:visible;cursor:pointer;}
.m-onoff-new .OC_box_bar h1{display:none;width:53px; height:24px; position:absolute; left:0px; top:0px; background-position:0 0; z-index:99;}
.m-onoff-new .OC_box_bar h3{display:none;width:53px; height:24px; position:absolute; left:0px; top:0px; background-position:-7px -24px; z-index:98; }
.m-onoff-new .OC_box_bar h2{width:28px; height:28px; position:absolute; left:0px; top:-2px;  background-position:0px -48px; z-index:100; cursor:pointer;border-radius:50%; box-shadow:0 0 5px rgba(0,0,0,.3);}

/* 新版开关 2016-09-13 */
.m-onoff-new-cc{display:inline-block;width:52px;height:28px;text-align:center;line-height:28px;}
.m-onoff-new-cc .ico_btn{background:url(../../img/icon_btn_new_cc.png) no-repeat;}
.m-onoff-new-cc .OC_box_bar{float:none;display:inline-block; width:52px; height:28px; position:relative;  overflow:visible;cursor:pointer;}
.m-onoff-new-cc .OC_box_bar h1{display:none;width:52px; height:28px; position:absolute; left:-1px; top:0px; background-position:0 0; z-index:99;}
.m-onoff-new-cc .OC_box_bar h3{display:none;width:52px; height:28px; position:absolute; left:-1px; top:0px; background-position:-8px -28px; z-index:98; }
.m-onoff-new-cc .OC_box_bar h2{width:24px; height:24px; position:absolute; left:0px; top:2px;  background-position:0px -58px; z-index:100; cursor:pointer;border-radius:50%; box-shadow:0 0 5px rgba(0,0,0,.3);}