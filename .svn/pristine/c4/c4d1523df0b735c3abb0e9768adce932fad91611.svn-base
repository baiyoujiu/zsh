		{:token('__hash__')}
        <input type="hidden" name="loginType" value="rms">
        <input type="hidden" id="areaCode" name="areaCode" value="">
        <input type="hidden" id="tokenId" name="tokenId" value="[object HTMLInputElement]">
        <input type="hidden" id="jsessionId" name="jsessionId" value="aee43fdd-6ed3-4a3c-b738-a2c316306323">
