<script type="text/javascript">

	window.onresize=function(){
		setConHeight();
	}
	function setConHeight(){
		var windowHeight=$(window).height();
		var headerHeight=$('.o2owebsite-header').height();
		var footerHeight=$('.o2owebsite-footer').height();
		var $container=$('.container');
		if(windowHeight >= '760'){
			$container.css('height',windowHeight-headerHeight-footerHeight);
		}else{
			$container.css('height','710');
		}
		
	}
	$(function(){
		setConHeight();
		$('#tokenId').val(tokenId);
		//判断密码是否正确
		var sess = '';
		var codeError = '';
		var userFreezeErrorMsg = 0;//冻结错误类

	 	if(sess || codeError || userFreezeErrorMsg){
	 		if(sess){
				textRrror('#flashInput',sess);
	 		}
	 		if(codeError == "false"){
				textRrror('#flashInput','验证码错误');
		 	}

	 		//alert(userFreezeErrorMsg+'===');
	 		//冻结错误类型
	 		 if(userFreezeErrorMsg){
	 			art.dialog({
					title : '该账号已被封号'
					,content : '<p style="width:300px;line-height:1.5em;">由于您违反平台规则，原因"'+userFreezeErrorMsg+'"，已被封号。如有疑问，请拨打客服电话0571-81886227<p>'
					,lock : true
					,padding: "20px"
					,okVal : "知道了"
					,ok:function(){}
				});
	 			
	 		}
		} 
		// 隐藏错误提示
	    $("body").bind("click",function(){
	    	$('.login-input-cont').find("label").remove();
	    });

		//记住用户名
		/*var cookie_name = 'zc400Username';
		if ($.cookie(cookie_name)) {
			$("#username").val($.cookie(cookie_name));
		}*/
		
		$("#flashImage").click(function(event){
			$('#flashImage').hide().attr('src','{:captcha_src()}'+ '?'+ Math.floor(Math.random() * 100)).fadeIn();
			return false;
		});

		$('.loginBtn').click(function(event) {
			var inputUname=$("#username").val();
			if(inputUname.indexOf('-') > -1){
				textRrror("#password","手机号或登录密码错误，请重新填写")
			}else{
				login();
			}
			return false;
	});
});
	
	
function textRrror(el,text){
	var str = '<label for="mobile" generated="true" class="error valueerror">'+text+'</label>';
	$(el).addClass('error');
	if(!$(el).parents().find('.verCodeInput').next().hasClass('error')) $(el).parents().find('.verCodeInput').after(str);
	
}
//检测登陆参数
var CommonEleFlag='';
function checkCommonElement() {
	var comInputUser=$.trim($('#username').val());
	var comInputPwd=$.trim($('#password').val());
	var comInputVail=$.trim($('#j_captcha').val());
	CommonEleFlag=false;
	if(comInputUser == ""){
		textRrror('#flashImage','请输入用户名');
		return false;
	}else if(comInputUser.length <4){
		textRrror('#flashImage','用户名不能少于4个字符');
		return false;
	}
	else if(comInputPwd ==""){
		textRrror('#flashImage','请输入密码');
		return false;
	}else if(comInputPwd.length < 6 ){
		textRrror('#flashImage','密码不能少于6个字符');
		return false;
	}
	else if(comInputVail ==""){
		textRrror('#flashInput','请输入验证码');
		return false;
	}else{
		$('.valueerror').remove();
		CommonEleFlag=true;
	}
	return CommonEleFlag;
}

/** 登录 */
function login(){
	/*//记住用户名
	var cookie_name = 'zc400Username';
	$.cookie(cookie_name, $.trim($("#username").val()), {
		path : '/',
		expires : 10
	});*/
	if(checkCommonElement()){
		$.ajax({ 
			type:"POST", 
			async:false, 
			url:"/members/login.html",
			dataType: "json",
			data:$("#jlogin").serialize(),
			success:function(result){
				if(result.status == 200){
					window.location.href = result.msg;
				}else{
					textRrror('#flashImage',result.msg);
				}
			},
			error:function(XMLHttpRequest, textStatus, errorThrown){
				textRrror('#flashImage','网络异常，请稍后重试！');
			}	
		});
	}
	
}

/** 登录响应回车 */
document.onkeydown=function(e){
  if(!e)e=window.event;
  if((e.keyCode||e.which)==13){
    login();
  }
};

</script>
