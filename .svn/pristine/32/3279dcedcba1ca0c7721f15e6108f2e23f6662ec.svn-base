.countryArrow {
	display: inline-block;
	width: 13px;
	height:6px;
	margin-left: 8px;
}
.countryArrow.arrowUp{
	background: url("../../img/indexarrowup.png") no-repeat;
	-webkit-background-size:contain;
	-moz-background-size:contain;
	-o-background-size:contain;
	background-size:contain;
}
.countryArrow.arrowDown{
	background: url("../../img/indexarrwodown.png") no-repeat;
	-webkit-background-size:contain;
	-moz-background-size:contain;
	-o-background-size:contain;
	background-size:contain;
}
.countryAreaBox{
	color: #666;
	font-size:12px;
	display: -webkit-inline-flex;
	display: -moz-inline-flex;
	display: -o-inline-flex;
	display: inline-flex;
	-webkit-justify-content:flex-start;
	-moz-justify-content:flex-start;
	-o-justify-content:flex-start;
	justify-content:flex-start;
	-webkit-align-items: center;
	-moz-align-items: center;
	-o-align-items: center;
	align-items: center;
	/*border: 1px solid #ccc;*/
	cursor: pointer;
	position: relative;
}
.joinmsgcountainer{
	border-radius: 4px 0px 0px 4px!important;
	border:1px solid #ccc;
	border-right:0!important;
	height: 34px;
}
.countryAreaMsg{
	height: 16px;
	margin-left:8px;
	padding-right:8px;
	margin-top: 8px;
	display: -webkit-inline-flex;
	display: -moz-inline-flex;
	display: -o-inline-flex;
	display: inline-flex;
	-webkit-justify-content:flex-start;
	-moz-justify-content:flex-start;
	-o-justify-content:flex-start;
	justify-content:flex-start;
	-webkit-align-items: center;
	-moz-align-items: center;
	-o-align-items: center;
	align-items: center;
	border-right: 1px solid #ccc;
	position:relative;
}
.bindInput{
	width: 179px!important;
	border-radius: 0px 4px 4px 0px!important;
	border-left: none!important;
	outline: none!important;

}
.bindInput:focus{
	border-color: #ccc!important;
	border-left:none!important;
	box-shadow: none!important;
}
.bindInput.error{
	border-left:none!important;
}
.countryAreaMsg span:nth-of-type(1){
	max-width: 59px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.countryAreaMsg span:nth-of-type(2){
	max-width: 44px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
input.error{
	border:1px solid #ccc!important;
}
input:focus{
	border-color: #ccc!important;
	box-shadow: none!important;
}
.countryList{
	position: absolute;
	left: 5px;
    top: 31px;
	width: 300px;
	max-height: 200px;
	background: #fff;
	z-index: 1000;
	overflow: hidden;
	overflow-y: auto;
	box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.35);
	display: none;
}
.countryList li{
	cursor: pointer;
	font-size: 12px;
	width:100%;
	height: 36px;
	line-height: 36px;
	padding-left:12px;
	color: #333;
}
.countryList li:hover{
	color: #fff;
	background:#ccc;
}
.countryList::-webkit-scrollbar-track-piece {
	background-color: rgba(0, 0, 0, 0);
	border-left: 1px solid rgba(0, 0, 0, 0);
}
.countryList::-webkit-scrollbar {
	width: 5px;
	height: 13px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}
.countryList::-webkit-scrollbar-thumb {
	background-color: rgba(0, 0, 0, 0.1);
	background-clip: padding-box;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	min-height: 28px;
}
.countryList::-webkit-scrollbar-thumb:hover {
	background-color: rgba(0, 0, 0, 0.1);
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}