/*.btn{padding:3px 20px;}*/


.btn-default {
	border: 1px solid #b2b2b2;
	color: #5b5b5b;
}
.btn-default.active,
.btn-default:hover,
.btn-danger{
	border: 1px solid #e85352;
	background: #fff;
	color: #e85352;
}
.pager li>a.btn-default:hover {
	background:#fff;
}
.btn-default:active, .btn.active {
    -webkit-box-shadow:none;
	box-shadow:none;
}
.btn-danger {
	border: 1px solid #e85352;
	background: #e85352;
	color: #fff;
}
.pager .previous>a{
	padding: 6px 12px;
	border: 1px solid #bbb;
	border-radius: 4px;
}
.btn-danger:hover, .btn-danger:focus, .btn-danger:active, .btn-danger.active, .open .dropdown-toggle.btn-danger{border: 1px solid #e85352;background: #fff;color: #e85352;}


/****主按钮****/
.primary_btn{padding:3px 20px; border: 1px solid #e85352; background: #e85352; color: #fff;}
.primary_btn:hover, .primary_btn:focus, .primary_btn:active, .primary_btn.active, .open .dropdown-toggle.primary_btn{background-color:#ff6161; border:1px solid #e85352;color:#fff;}

/****次按钮****/
.secondary_btn{padding:3px 20px;}


/****在线订单主按钮****/
.primary_btn_order{
	/*padding:4px 10px; */
	border: 1px solid #e85352; 
	background: #e85352; 
	color: #fff; 
	border-radius: 2px; 
	padding: 4px 0;
    text-align: center;
}
.primary_btn_order:hover,
.primary_btn_order:focus,
.primary_btn_order:active,
.primary_btn_order.active, 
.open .dropdown-toggle.primary_btn_order{
	background-color:#ff6161; 
	border:1px solid #e85352;
	color:#fff;
}

/****在线订单次按钮****/
.secondary_btn_order{
/*	padding:4px 10px;*/ 
	border: 1px solid #ccc; 
	background: #fff; 
	color: #666; 
	border-radius: 2px; 
	padding: 4px 0;
    text-align: center;
}
.secondary_btn_order:hover,
.secondary_btn_order:focus,
.secondary_btn_order:active,
.secondary_btn_order.active, 
.open .dropdown-toggle.secondary_btn_order{
	background-color:#fff; 
	border:1px solid #e85352;
	color:#e85352;
}